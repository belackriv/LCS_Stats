mixin linkContent(link)
	a(href=link.href)=link.label

doctype 5
html
	head
		title LCS Stats
		link(rel='stylesheet', href='/css/bootstrap.css')
		link(rel='stylesheet', href='/css/bootstrap-theme.css')
		link(rel='stylesheet', href='/css/bootstrap-tour.css')
		link(rel='stylesheet', href='/js/backbone/backbone-forms/templates/bootstrap.css')
		link(rel='stylesheet', href='/css/site.css')
	body
	if(navbar)
		block navbar
			nav#navbar.navbar.navbar-default.navbar-fixed-top(role="navigation	")
				if(navbar.header)
					.navbar-header
						button.navbar-toggle(type="button", data-toggle="collapse")
							span.sr-only Toggle navigation
							span.icon-bar
							span.icon-bar
							span.icon-bar
						a.navbar-brand(href="/")=navbar.header
				if(navbar.links)
					each link in navbar.links
						.collapse.navbar-collapse.navbar-ex1-collapse
							ul.nav.navbar-nav
								if(link.classes)
									li(class=link.classes.join(' '))
										+linkContent(link)
								else
									li
										+linkContent(link)
	header#header	
		block header
	section#content
		block content
	footer#footer
		block footer
			div &copy Belac 2013
	script.
		var require = {
			config: {
				'app/app': {
					'path':'#{path}'
				}
			}
		};
		
	script(src='/js/lib/require.js',data-main="/js/app-init.js")
	include templates